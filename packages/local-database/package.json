{
  "name": "@repo/local-database",
  "description": "Shared schemas for the repository",
  "version": "0.0.1",
  "private": true,
  "files": [
    "dist/**"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./local": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsup --clean",
    "check-types": "tsc --noEmit",
    "dev": "tsup --watch"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.11.24",
    "drizzle-kit": "^0.31.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@repo/schemas": "workspace:*",
    "drizzle-orm": "^0.44.5",
    "postgres": "^3.4.7",
    "tsup": "^8.5.0",
    "zod": "^3.25.56"
  }
}