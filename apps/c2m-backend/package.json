{
  "name": "c2m-backend",
  "version": "0.0.0",
  "private": true,
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "start": "cross-env NODE_PATH=dist node dist/index.js",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm *.tsbuildinfo",
    "test": "jest --setupFiles dotenv/config",
    "lint": "eslint . --quiet",
    "check:chunk-processor": "tsup src/checks/chunk-processor.ts --out-dir dist/checks --onSuccess \"node dist/checks/chunk-processor.js\" --clean",
    "check:converter-worker": "tsup src/checks/converter-worker.ts --out-dir dist/checks --onSuccess \"node dist/checks/converter-worker.js\" --clean"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@orpc/client": "^1.8.6",
    "@orpc/openapi": "^1.8.6",
    "@orpc/server": "^1.8.6",
    "@orpc/standard-server": "^1.9.1",
    "@orpc/zod": "^1.8.6",
    "@repo/contracts": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/local-database": "workspace:*",
    "@repo/schemas": "workspace:*",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "pg": "^8.16.0",
    "tsdown": "^0.14.2",
    "tsx": "^4.20.5",
    "zod": "^3.25.55"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/typescript-config": "workspace:*",
    "@swc/core": "^1.12.9",
    "@swc/wasm": "^1.12.9",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.1",
    "nodemon": "^3.1.0",
    "tsup": "^8.5.0",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@10.11.0"
}